<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".MentorProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="vertical"
                android:background="@drawable/mentor_profile_background"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/backArrowButton"
                    android:layout_width="25dp"
                    android:layout_height="20dp"

                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/back_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingStart="20dp"
                    tools:ignore="ExtraText">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, I'm"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:lineSpacingExtra="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/mentorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Cooper"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:lineSpacingExtra="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/mentorProfilePicture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/mentor_profile_picture"
                        android:layout_marginLeft="80dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cyan"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mentorDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UX Designer at\nGoogle"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:lineSpacingExtra="10dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rating_star"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/mentorRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/cyan"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="About me"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:text="I am a passionate UX designer at Google with a focus on creating user-centric and intuitive interfaces. With 10 years of experience, I have had the opportunity to work on diverse projects that have shaped my understanding of design\nprinciples and user experience."
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="My Expertise Include"
                    android:textColor="@color/DarkCyan"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    tools:ignore="ExtraText">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mentor_profile_expertise_background"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Career Advice"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/mentor_profile_expertise_background"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="User Experience Design"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    tools:ignore="ExtraText">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mentor_profile_expertise_background"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Leadership"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/mentor_profile_expertise_background"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Prototyping"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:gravity="center"
                    tools:ignore="ExtraText">

                    <ImageButton
                        android:id="@+id/dropReviewButton"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/drop_review_button"

                        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck,TouchTargetSizeCheck" />


                    <ImageButton
                        android:id="@+id/joinCommunityButton"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="90dp"
                        android:background="@drawable/join_community_button"
                        tools:ignore="SpeakableTextPresentCheck,TextSizeCheck,TouchTargetSizeCheck" />

                </LinearLayout>

                <Button
                    android:id="@+id/bookSessionButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Book a Session"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/DarkCyan"
                    android:layout_marginTop="20dp"

                    android:layout_marginBottom="20dp"

                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>








    <!-- ========================================================= -->



</androidx.constraintlayout.widget.ConstraintLayout>